   <template id="report_navedocumentobaseoficio">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <link rel="stylesheet" href="/nave_documento/static/src/css/styles.css"></link>
                        <div class="col-xs-12" style="font-size: 13px">
                            <table width="100%" border="0" cellpadding="0" cellspacing="0" id="cabecera_info">
                                <tr>
                                    <td colspan="2" align="right" style="font-size: 14px" class="text-right"><b>Oficio Nro. <span t-field="o.name"/></b></td><br/>
                                </tr>
                                <!-- <tr>
                                    <td colspan="2" align="right" style="font-size: 14px" class="text-right"><b><span t-field="o.reparto_id.city_id.name"/> , <span t-esc="datetime.datetime.now().strftime('%d de %B de %Y')"/></b></td><br/>
                                </tr> -->
                                <tr>
                                    <td colspan="4" height="10px"/>
                                </tr>
                                <!-- <tr id="lugar_fecha_emision_info">
                                    <td colspan="2" align="right" style="font-size: 14px" class="text-right"><b><span t-field="o.reparto_id.city_id.name"/> , <span t-esc="datetime.datetime.now()" t-options="{'widget': 'date', 'format': 'd MMMM y'}"/></b></td><br/>
                                </tr> -->
                                <tr>
                                    <td height="30" colspan="4" align="center">
                                        <div class="o_utm_no_data_img">
                                            <img src="/base_sigmap/static/src/img/escudoEcuador.jpg" alt="Escudo Ecuador" style="max-height: 5cm; max-width: 8cm;" class="utm_chart_image image-responsive mt8"/>
                                        </div>
                                        <br/>
                                    </td>
                                </tr>
                                <tr id="pais_cabecera_info">
                                    <td colspan="4" class="text-center" style="font-size: 15px"><b>República del Ecuador</b></td><br/>
                                </tr>
                                <tr >
                                    <td colspan="4" height="5px"/>
                                </tr>
                                <!-- <tr id="titulos_cabecera_info">
                                    <td height="10" colspan="4" align="center" class="text-center" style="font-size: 18px">
                                        <b><span t-if="o.documento_emitido_id.tramite_id.servicio_id.titulo_reporte" t-field="o.documento_emitido_id.tramite_id.servicio_id.titulo_reporte"/></b><br/>
                                        <span t-if="o.documento_emitido_id.tramite_id.servicio_id.titulo_reporte_en" t-field="o.documento_emitido_id.tramite_id.servicio_id.titulo_reporte_en"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4" height="5px"/>
                                </tr> -->
                            </table>

                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td width="10%" align="left">
                                        <b>Asunto: </b>
                                    </td>
                                    <td align="justify"><!--style="vertical-align:top;text-align:left;"-->
                                        <span t-field="o.asunto"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td height="10px"></td>
                                </tr>
                            </table>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left">
                                        <span t-if="o.partner_id.genero == 'M'"><b>Señor </b></span>
                                        <span t-elif="o.partner_id.genero == 'F'"><b>Señora </b></span>
                                        <span t-else="">Compañía </span><br/>
                                        <b><span t-field="o.partner_id.name"></span></b>
                                    </td>
                                    <br/>
                                </tr>
                                <tr>
                                    <td colspan="4" height="20px"/>
                                </tr>
                                <tr>
                                    <td colspan="4" align="justify">
                                        De mi consideración:
                                    </td>
                                    <br/>
                                </tr>
                                <tr>
                                    <td colspan="4" height="20px"/>
                                </tr>
                                <tr>
                                    <td colspan="4" align="justify">
                                        <span t-field="o.descripcion"></span>
                                    </td>
                                    <br/>
                                </tr>
                                <tr>
                                    <td colspan="4" height="20px"/>
                                </tr>
                                <tr>
                                    <td colspan="4" align="justify">
                                        Con sentimiento de distinguida consideración.
                                    </td>
                                    <br/>
                                </tr>
                                <tr>
                                    <td colspan="4" height="40px"/>
                                </tr>
                                <tr>
                                    <td colspan="4" align="justify">
                                        Atentamente,<br/>
                                        <b>DIOS, PATRIA Y LIBERTAD </b><br/>
                                    </td>
                                    <br/>
                                </tr>
                                <tr>
                                    <td colspan="4" height="60px"/>
                                </tr>
                            </table>
                        </div>
