<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Personal Marítimo -->
    <template inherit_id="personal_maritimo.report_personalmaritimo" id="report_pm_llibretin">
        <xpath expr="//table[@name='table_pm_info_mercante']/tr[last()]" position="after">
            <tr t-foreach="o.libretin_ids.filtered(lambda c: c.state == 'vigente')" t-as="pmlibretin">
                <td style="border:1px solid black"><b>Libretín</b></td>
                <td colspan="3" style="border: 1px solid black;">
                    <div>Matrícula Provisional de Tráfico Internacional:
                        <t t-if="pmlibretin.es_provisional == True">SI</t><t t-else="">NO</t>
                    </div>
                    <div t-if="pmlibretin.tipo_trafico">Tipo de Tráfico: <span t-field="pmlibretin.tipo_trafico.name"/></div>
                    <div t-if="pmlibretin.numero_libretin">Número de libretín: <span t-field="pmlibretin.numero_libretin"/></div>
                    <div t-if="pmlibretin.name_previous">Matrícula Anterior: <span t-field="pmlibretin.name_previous"/></div>
                    <div t-if="pmlibretin.fecha_impresion">Fecha Impresión: <span t-field="pmlibretin.fecha_impresion"/></div>
                    <div t-if="pmlibretin.fecha_inicio">Fecha Inicio: <span t-field="pmlibretin.fecha_inicio"/></div>
                    <div t-if="pmlibretin.fecha_caducidad">Fecha Caducidad: <span t-field="pmlibretin.fecha_caducidad"/></div>
                </td>
            </tr>
        </xpath>
    </template>

    <!-- Matrícula Tráfico Internacional (Libretín) -->
    <record id="action_report_documento_previo_libretin" model="ir.actions.report">
        <field name="name">Matrícula Previa de Tráfico Internacional (SEAMAN'S BOOK)</field>
        <field name="model">permar.documento.libretin</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">personal_maritimo_documento.report_documentopreviolibretin</field>
        <field name="report_file">personal_maritimo_documento.report_documentopreviolibretin</field>
        <field name="print_report_name">'Matrícula Previa de Tráfico Internacional (SEAMAN'S BOOK) - %s' % (object.name)</field>
        <!-- <field name="paperformat_id" ref="paperformat_matricula_libretin"/> -->
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_documentopreviolibretin">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="row" style="font-size: 10px">
                            <div class="col-xs-12" style="height: 16cm;">
                                <table class="table table-condensed table-bordered" border="1" width="100%" border-collapse="collapse" name="table_libretin_adicional">
                                    <tr>
                                        <td colspan="4" align="center">
                                            <b><i>DIRECCIÓN NACIONAL DE LOS ESPACIOS ACUÁTICOS</i></b><br/>
                                            <i>NATIONAL DIRECTORATE OF AQUATIC SPACES</i>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <b><i>NÚMERO DE LIBRETÍN / BOOK:</i></b><br/>
                                            <div align="center"><span t-field="o.numero_libretin"/></div>
                                        </td>
                                        <td colspan="2">
                                            <b><i>MATRÍCULA / REGISTRATION NUMBER:</i></b><br/>
                                            <div align="center"><span t-field="o.matricula"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="white-space: nowrap"><b><i>APELLIDOS:</i></b><br/><b><i>LAST:</i></b>
                                            <div align="center"><span t-if="o.personal_maritimo_id.last_name" t-esc="o.personal_maritimo_id.last_name.upper()"/></div>
                                        </td>
                                        <td colspan="2" style="white-space: nowrap"><b><i>CÉDULA DE IDENTIDAD / I.D. CARD:</i></b><br/><b><i>FIRST M.I.:</i></b>
                                            <div align="center"><span t-field="o.personal_maritimo_id.vat"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" style="white-space: nowrap"><b><i>NOMBRES:</i></b><br/><b><i>FIRST M.I.:</i></b>
                                            <div align="center"><span t-if="o.personal_maritimo_id.first_name" t-esc="o.personal_maritimo_id.first_name.upper()"/></div>
                                        </td>
                                        <td colspan="2" style="white-space: nowrap"><b><i>JERARQUÍA / RANK ON BOARD:</i></b><br/><b><i>FIRST M.I.:</i></b>
                                            <div align="center"><span t-if="o.jerarquia_id" t-esc="o.jerarquia_id.name.upper()"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><b><i>NACIONALIDAD / NATIONALITY:</i></b>
                                            <div align="center"><span t-if="o.personal_maritimo_id.nationality" t-esc="o.personal_maritimo_id.nationality.upper()"/></div>
                                        </td>
                                        <td colspan="2"><b><i>SEXO / SEX:</i></b>
                                            <div align="center"><span t-field="o.personal_maritimo_id.genero"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="4"><b><i>LUGAR Y FECHA DE NACIMIENTO / BIRTH PLACE AND DATE:</i></b>
                                            <div align="center"><span t-if="o.personal_maritimo_id.state_of_birth_id" t-esc="o.personal_maritimo_id.state_of_birth_id.name.upper()"/> / <span t-field="o.personal_maritimo_id.city_of_birth_id.name"/>  <span t-esc="o.personal_maritimo_id.birthday.strftime('%d de %B de %Y')"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><b><i>LUGAR Y FECHA DE EXPEDICIÓN / ISSUE DATE:</i></b>
                                            <div align="center"><span t-if="o.reparto_id.city_id" t-esc="o.reparto_id.city_id.name.upper()"/> <span t-esc="o.fecha_inicio.strftime('%d de %B de %Y')"/></div>
                                        </td>
                                        <td colspan="2"><b><i>FECHA DE EXPIRACION / EXPIRATION DATE:</i></b>
                                            <div align="center"><span t-esc="o.fecha_caducidad.strftime('%d de %B de %Y')"/></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">FOTO PERSONA</th>
                                        <td>
                                            <img t-att-src="image_data_uri(o.foto_carnet)" style="max-height:80pt;max-width:80pt;"/>
                                        </td>
                                        <th scope="row">FOTO FIRMA DEL TITULAR (HOLDER SIGNATURE)</th>
                                        <td>
                                            <img t-att-src="image_data_uri(o.image_firma)" style="max-height:30pt;max-width:70pt;"/>
                                        </td>
                                    </tr>
                                </table>
                                <br/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

