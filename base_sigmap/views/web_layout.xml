<odoo>
  <template id='my_navbar_web_layout' inherit_id='web.layout'>
    <xpath expr="//body" position="inside">
      <style>.o_main_navbar {background: linear-gradient(45deg, #000030, #000030);
                                         background-color: #000030!important;border-bottom: 0px;}</style>
      <style>#oe_main_menu_navbar {background: linear-gradient(45deg, #000030, #000030);
                                         background-color: #000030!important;border-bottom: 0px;}</style>
      <style>
        .btn-primary {border-color: #000074;background-color: #000074!important;border-bottom: 0px;}
        .btn-secondary {
            color: #5a5a5a;
            background-color: #ffffff;
            border: none;
        }

        .btn-secondary:not(:disabled):not(.disabled):active, .btn-secondary:not(:disabled):not(.disabled).active, .show > .btn-secondary.dropdown-toggle {
            color: #212529;
            background-color: #e6e5e5;
            border: none
        }

      </style>

     </xpath>
  </template>
